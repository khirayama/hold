javascript:
  if (window.opener) {
    window.opener.location = '/dashboard';
    window.close();
  } else {
    document.querySelectorAll('.oauth-link').forEach(function(link) {
      link.addEventListener('click', function(event) {
        event.preventDefault();
        const w = 500;
        const h = 500;
        const width = window.screen.width;
        window.open(
          event.target.href,
          '_blank',
          `
            top=80,
            left=${(width - w)/2},
            width=${w},
            height=${h},
            toolbar=0,
            location=0,
            directories=0,
            status=0,
            menubar=0,
            scrollbars=1,
            resizable=0
          `
        );
      });
    });
  }
